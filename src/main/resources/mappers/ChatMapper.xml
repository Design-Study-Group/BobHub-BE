<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bobhub.chat.mapper.ChatMapper">

    <!-- resultMap 정의 -->
    <resultMap id="ChatViewResultMap" type="com.bobhub.chat.domain.Chat">
        <id property="id" column="id"/>
        <result property="roomId" column="room_id"/>
        <result property="sender" column="sender"/>
        <result property="userId" column="user_id"/>
        <result property="timestamp" column="timestamp" javaType="java.sql.Timestamp"/>
    </resultMap>

    <select id="getChatsByPartyId" parameterType="long" resultMap="ChatViewResultMap">
        select *
        from CHATTING
        where room_id = #{partyId}
        order by timestamp
    </select>

    <insert id="insertChat" parameterType="com.bobhub.chat.domain.Chat">
        insert into CHATTING (id, room_id, sender, user_id, CONTENT)
        values (#{id}, #{roomId}, #{sender}, #{userId}, #{content})
    </insert>
</mapper>